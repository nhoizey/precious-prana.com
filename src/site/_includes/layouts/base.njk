    </script>

    <link rel="stylesheet" href="/css/main.css" />
    {%- if title != 'Precious Prana' %}
      <title>{{ title }} — Precious Prana</title>
    {% else %}
      <title>Precious Prana, communauté pour faire pétiller l’énergie vitale des mères actives</title>
    {% endif %}
  </head>
  <body class="{{ bodyClass }}" >
    <header>
      <div class="container">
        <h1 class="logo"><a href="/"><img
          src="/images/logo-precious-prana-360.png"
          srcset="
            /images/logo-precious-prana-360.png 360w,
            /images/logo-precious-prana-480.png 480w,
            /images/logo-precious-prana-640.png 640w,
            /images/logo-precious-prana-800.png 800w"
          sizes="(min-width: 33.3rem) 25rem, 75vw"
          alt="Precious Prana" /></a></h1>
      </div>
