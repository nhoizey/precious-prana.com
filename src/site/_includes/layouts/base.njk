<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Google Analytics #}
    <script>
      window.ga = function () {
        ga
          .q
          .push(arguments)
      };
      ga.q = [];
      ga.l = + new Date;
      ga('create', 'UA-127782-6', 'auto');
      ga('set', 'transport', 'beacon');
      ga('set', 'anonymizeIp', true);
      ga('send', 'pageview')
    </script>
    <script src="https://www.google-analytics.com/analytics.js" async defer></script>

    <link rel="stylesheet" href="/css/main.css" />
    {%- if title != 'Accueil' %}
      <title>{{ title }} — Precious Prana</title>
    {% else %}
      <title>Precious Prana, faire pétiller les femmes</title>
    {% endif %}

    <link rel="canonical" href="https://precious-prana.com" />
    <meta property="og:url" content="https://precious-prana.com" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Precious Prana" />
    <meta property="og:title" content="Precious Prana" />
    <meta name="description" content="Faire pétiller les femmes" />
    <meta property="og:description" content="Faire pétiller les femmes" />
    <meta property="og:image" content="https://precious-prana.com/images/logo-precious-prana-social.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@preciousprana" />
    <meta name="twitter:site" content="@preciousprana" />

    <link rel="icon" type="image/png" href="/images/favicon-256.png" />
  </head>
  <body>
    <header>
      <div class="container">
        {%- if title != 'Accueil' %}
          <p class="logo">
            <a href="/">{% include "logo.njk" %}</a>
          </p>
        {%- else -%}
          <h1 class="logo">
            <a href="/">{% include "logo.njk" %}</a>
          </h1>
        {% endif %}
      </div>
    </header>
    {% include "navigation.njk" %}
    <main>
      <div class="container">
        {{ content | safe }}

        <div class="flyer">
          <a href="/files/flyer-juin2019.pdf">
            <p>Téléchargez<br />notre flyer :</p>
            <img src="/files/flyer-juin2019.png" alt="couverture du flyer Precious Prana" width="120" height="170" />
          </a>
        </div>
      </div>
    </div>
  </main>
  {% include "footer.njk" %}

  <!-- Netlify Identity -->
  <script>
    if (window.netlifyIdentity) {
      window
        .netlifyIdentity
        .on("init", user => {
          if (!user) {
            window
              .netlifyIdentity
              .on("login", () => {
                document.location.href = "/admin/";
              });
          }
        });
    }
  </script>
</body>
</html>