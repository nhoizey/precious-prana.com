<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-127782-6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-127782-6');
    </script>

    <link rel="stylesheet" href="/css/main.css" />
    {%- if title != 'Precious Prana' %}
      <title>{{ title }} — Precious Prana</title>
    {% else %}
      <title>Precious Prana, communauté qui permet aux mères actives de se ressourcer</title>
    {% endif %}
  </head>
  <body class="{{ bodyClass }}" >
    <div class="container">
      <header>
        <h1 class="sitename">{{ title }}</h1>
        {%- if subtitle %}<p class="subtitle">{{ subtitle }}</p>{% endif %}
      </header>
      <div class="container">
        {{ content | safe }}
      </div>
      {% include "footer.njk" %}
    </div>
  </body>
</html>