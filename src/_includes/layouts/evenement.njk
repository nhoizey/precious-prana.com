---
layout: layouts/base.njk
tags: agenda
---

<h1>{{ title }}</h1>
<dl class="meta">
  <div>
    <dt><svg class="icon"><use xlink:href="#symbol-date" /></svg></dt>
    <dd>{{ page.date | plainDate }}</dd>
  </div>
  <div>
    <dt><svg class="icon"><use xlink:href="#symbol-map" /></svg></dt>
    <dd>{{ locations[location].name }}, Ã  {{ locations[location].city }}</dd>
  </div>
</dl>
{% if poster %}
  {% set cloudinaryPrefix = "https://res.cloudinary.com/nho/image/fetch/c_fill,f_auto,q_auto," %}
  {% set posterAlt %}{{ title }} le {{ page.date | plainDate }}, par Precious Prana{% endset %}

  {% poster
  src = poster,
  alt = posterAlt,
  zoom = true %}
{% endif %}

{% if teaser %}
  <p class="intro">{{ teaser }}</p>
{% endif %}

{% include "cta.njk" %}

{{ content | safe }}

