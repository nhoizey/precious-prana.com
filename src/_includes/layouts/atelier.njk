---
layout: layouts/base.njk
tags: ateliers
---

<h1>{{ title }}</h1>
{% if teaser %}
  <p class="intro">{{ teaser }}</p>
{% endif %}

{{ content | safe }}

<h2>Événements de {{ title }}</h2>

<dl>
  {%- for evenement in collections.evenements | reverse -%}
    {% if evenement.data.ateliers %}
      {% if page.fileSlug in evenement.data.ateliers %}
        <dt>{{ evenement.data.date | plainDate }}</dt>
        <dd>
          <a href="{{ evenement.url }}">{{ evenement.data.title }}</a>
        </dd>
      {% endif %}
    {% endif %}
  {%- endfor -%}
</dl>