<dl class="meta">
  <div>
    <dt><svg class="icon"><use xlink:href="#symbol-date" /></svg></dt>
    <dd>{{ date | plainDate }}</dd>
  </div>
  {% if location %}
    {% for lieu in collections.lieux %}
      {% set lieuPath = lieu.inputPath | replace('./', '') %}
      {% if lieuPath == location %}
        <div>
          <dt><svg class="icon"><use xlink:href="#symbol-map" /></svg></dt>
          <dd>{{ lieu.data.title }}, Ã  {{ lieu.data.city }}</dd>
        </div>
      {% endif %}
    {% endfor %}
  {% endif %}
</dl>
